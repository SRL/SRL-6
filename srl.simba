{$IFDEF SMART}
  {$include_once lib/misc/smart.simba}
{$ENDIF}

{$f+}

function setupSRL(): boolean;
var
  t := getTickCount();
begin
  clearDebug();
  writeln('Set up SRL in ', (getTickCount() - t), 'ms.');

  {$IFNDEF SMART}
  activateClient();
  {$ENDIF}

  if (waitClientReady()) then
    writeln('Client is ready.')
  else begin
    writeln('Client is taking too long to load, terminating...');
    halt();
  end;

  result := true;
end;

begin
  setupSRL();
end;
