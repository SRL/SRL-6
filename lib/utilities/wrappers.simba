(*
replicate: overload;
~~~~~~~~~~~~~~~~~~~~

.. code-block:: pascal

    function replicate(const str : String; const times : Integer): String; overload;

Used to replicate any string, as opposed to the former replicate() that replicates chars.

.. note::

    by Zyt3x

Example:

.. code-block:: pascal

    writeLn(replicate('SRL', 10));

*)
function replicate(const str : String; const times : Integer): String; overload;
begin
  for 1 to times do
    Result := Result + str;
end;

(*
freeDTM: overload;
~~~~~~~~~~~~~~~~~~

.. code-block:: pascal

     procedure freeDTM(dtms: TIntegerArray); overload;

Will free an array of DTMs instead of just one.

.. note::

    by Ollybest

Example:

.. code-block:: pascal

   dtm1 := dtmFromString('');
   dtm2 := dfmFromString('');

   freeDTM([dtm1, dtm2]);

*)
procedure freeDTM(dtms: TIntegerArray); overload;
var
  i: integer := 0;
begin
  for i to high(dtms) do
    freeDTM(dtms[i]);
end;

(*
freeBitmap: overload;
~~~~~~~~~~~~~~~~~~~~~

.. code-block:: pascal

     procedure freeBitmap(bmps: TIntegerArray); overload;

Will free an array of bitmaps instead of just one.

.. note::

    by Ollybest

Example:

.. code-block:: pascal

   bmp1 := bitmapFromString('');
   bmp2 := bitmapFromString('');

   freeBitmap([bmp1, bmp2]);

*)
procedure freeBitmap(bmps: TIntegerArray); overload;
var
  i: integer := 0;
begin
  for i to high(bmps) do
    freeBitmap(bmps[i]);
end;
