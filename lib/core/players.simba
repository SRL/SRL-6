function TPlayer.switchToWorld(newWorld: integer = 0): boolean;
var
  t: UInt64;
  x, y, interfaceBMP, loadingBMP: integer;
begin
  result := false;

  print('Switching to world '+toStr(newWorld), TDebug.SUB);

  if (options.open()) then
  begin
    options.selectOption(['Hop','op wor', 'orlds']);

    interfaceBMP := BitmapFromString(34, 3, 'meJxjPf2fZepudnYRMSkXKRkfIBI' +
        'StmYFCm64y8LKJyziBERAEaAskASyefwqWPe+Aypgm34YIghRD0Ib' +
        '77NvfsbVuFFI2A4oxQo2mY1dCKgLwmZh4QeygVaANCr4QwSZmTkhh' +
        'kDMByKIsTxqHixT94CMdU8UlfKGumrqbgYGBiYBCebgbA4uObjJQP' +
        'fDFQBt4ROwEpW0AcryBTYCBZlcQiHOgPgFwgBK8fNZARn8Mo4gNfH' +
        'lvLw6cENYWQWAzuDjNeMV0IX7BSIIAJXwTpk=');

    t := (getTickCount64() + (7000));

    while (not result) and (getSystemTime() < t) do
    begin
      print('Waiting for world hop screen...', TDebug.SUB);
      result := findBitmapIn(interfaceBMP, x, y, mainscreen.getBounds());
      wait(700 + random(300));
    end;

    if (not findBitmapIn(interfaceBMP, x, y, mainscreen.getBounds())) then
    begin
      print('Hop screen never opened!', TDebug.ERROR);
      freeBitmap(interfaceBMP);
      exit(false);
    end;

    self.world := -1;

    if (newWorld = 0) then
      result := lobbyWorlds.selectRandomWorld(self.isMember, true, [], true)
    else
      result := lobbyWorlds.selectWorld(newWorld, true);

    if result then
    begin
      wait(150 + random(450));
      mouseBox(lobbyWorlds.confirmButton, MOUSE_LEFT, MOUSE_HUMAN);

      t := (getTickCount64() + (30000));
      result := false;

      loadingBMP := BitmapFromString(53, 4, 'meJyTFRMStQ5kmvmeP7xRWl5JVkw' +
          'IiDhqDzAs+g9HbG0XIOJwBFQA1CXoV8iXOIGl/z5QI5ABNAEiCxSH' +
          'myCpaQQUAaqBMNDYxCOg4UBHAi0FsrmKNwi7JuJRDJTlyVoAdLa4k' +
          'SNQI0Qv3BygdqA4kA1UQLnzIE6CWAr0NUQEHmJAo7CaBnQPxEnAoE' +
          'MOYaAJEK8BdWENPYJ+xww3eDxCfA2JIIgI0GS4IFr8AgMQHiDwmAU' +
          'qhmsEuh/iKngwQpwNFIfoBSpDI9EQADOKhy8=');

      wait(2000 + random(1500));

      while (not result) and (getSystemTime() < t) do
      begin
        print('Waiting for world to switch...', TDebug.SUB);
        result := not findBitmapIn(loadingBMP, x, y, mainscreen.getBounds());
        wait(1000 + random(500));
      end;

      wait(1000 + random(1500));
      print('Hopped to world ' + toStr(newWorld) + ' successfully.', TDebug.SUB);
      self.world := newWorld;
      freeBitmap(loadingBMP);
    end;
    freeBitmap(interfaceBMP);
  end;
end;

