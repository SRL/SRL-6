function TRSActionBar.clickSlot(slot: integer; clickType: integer = MOUSE_LEFT): boolean;
begin
  if (not self.__isSlotValid(slot)) or self.isSlotEmpty(slot) then
    exit(false);

  mouseBox(self.__slots[slot - 1], clickType);
  result := true;
end;

