function TRSActionBar.isEmpty(): boolean;
var
  i: integer;
begin
  for i := ACTION_BAR_SLOT_LOW to ACTION_BAR_SLOT_HIGH do
    if (not self.isSlotEmpty(i)) then
      exit(false);

  result := true;
end;

