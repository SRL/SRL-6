    exit();

  tabBox := self._getTabBounds(tab);
  tabBox.edit(0, 20, 0, 0);  // Only consider bottom half of the tab

  if (tabBox.x1 <> -1) then
    result := (countColorTolerance(1380879, tabBox, 7) < 50); //color at the bottom of inactive tabs
end;

