function OpenDepositBox : Boolean;
var
  X, Y, T:integer;
begin
  result := false;
  If(not(LoggedIn)) then exit;
  begin
    if FindObjTPA(x, y, 739167, 10, -1, 30, 30, 200, ['deposit']) then
    begin
      GetMousePos(X, Y);
      Mouse(x, y, 0, 0, True);
      Result := WaitFunc(@DepositScreen, 200, 5000);
    end else
    Writeln('Could not find the deposit box');
  end;
end;
                                                                             
