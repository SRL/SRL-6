  if (not LoggedIn) then exit;

  for Result := 1 to 16 do
  begin
    tP.X := 535 + (Result - 1) mod 8 * 30;
    tP.Y := 169 + (Result - 1) div 8 * 298;
    if (GetColor(tP.X, tP.Y) = 3775974) then
      Break;
  end;
  result := result + 20; //SO IT ACTUALLY WORKS WITH THE TABS KTHX
