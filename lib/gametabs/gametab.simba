function GetEquippedItemBounds(Which: Variant): TBox;
var
  P : TPoint;
  I : Byte;
begin
  Which := LowerCase(Which);
  case Which of
    1, 'helm', 'helmet' :
      I := 1;
    2, 'cape' :
      I := 2;
    3, 'amulet', 'neck', 'necklace' :
      I := 3;
    4, 'arrows', 'bolts' :
      I := 4;
    5, 'right hand', 'weapon' :
      I := 5;
    6, 'plate', 'chest', 'platebody' :
      I := 6;
